<%- model_class = UserAnswer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:answer) %>:</strong></dt>
  <dd><%= @user_answer.answer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @user_answer.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_challenge_id) %>:</strong></dt>
  <dd><%= @user_answer.user_challenge_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @user_answer.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:marks) %>:</strong></dt>
  <dd><%= @user_answer.marks %></dd>
  <dt><strong><%= model_class.human_attribute_name(:industry_id) %>:</strong></dt>
  <dd><%= @user_answer.industry_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              user_answers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_answer_path(@user_answer), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_answer_path(@user_answer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
