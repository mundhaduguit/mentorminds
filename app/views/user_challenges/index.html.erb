<br>

<% if current_user.challenges.present? %>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-xs-4" style="background-color: #0feb9e">

      </div>
    </div>
<% end %>

<% if @user_challenges.present? %>


    <div class="challenges_main_div" align="center">

         <div class="tools_and_persons">
          <br>
            <a href="#" data-toggle="modal" data-target="#video_link" >
              <%= image_tag ("Gamification-Tab.png") %><br><br>
            </a>

            <a href="#" data-toggle="modal" data-target="#video_link2">
              
              <%= image_tag ("Gamification-Tab.png") %><br><br>
            </a>
            
            <a href="#" data-toggle="modal" data-target="#video_link3">
              
              <%= image_tag ("Gamification-Tab.png") %><br><br>
            </a>

             <a href="#" data-toggle="modal" data-target="#text_buddy">
              
              <%= image_tag ("3.png") %><br><br>
            </a>
          
            

          <a href="javascript:pixlr.overlay.show();" >
              <%= image_tag ("2.png"), alt: "Pixlr" %><br><br>
          </a>
        </div>

        <div class="date" align="center">
          <br>
          <% (1..30).each do |date| %>
            <%= date %><br>
          <% end %>
        </div>

      <div style="height: 100%;margin-left: auto;margin-right: auto;width: 55%;">
        <div class="move-arrow prev" >
          <i class="fa  fa-chevron-left"></i>
        </div>

        <% @user_challenges.each_with_index do |user_challenge,i| %>

          <% if i==0 %>

              <div class="challenges_div first current" style="float: left;">
                <%= render partial: 'user_challenge', locals: {user_challenge: user_challenge} %>
              </div>
          <%else%>
                <div class="challenges_div" style="float: left;display: none;">
                  <%= render partial: 'user_challenge', locals: {user_challenge: user_challenge} %>
                </div>
          <% end %>
      <% end %>
      <div class="move-arrow next">
        <i class="fa  fa-chevron-right"></i>
      </div>
    </div>
    </div>
<% end %>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <%= render 'user_answers/form' %>
      </div>
      
    </div>
  </div>
</div>

<div class="modal fade" id="video_link" role="dialog" aria-labelledby="video_linkLabel" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-body">
        <div class="clearfix"></div>
        <div class="clearfix"></div>
        <iframe width="640" height="360" src="https://www.youtube.com/embed/yJOqiZEU-bg?feature=player_detailpage" frameborder="0" allowfullscreen></iframe>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
  </div>
</div>

<div class="modal fade" id="video_link2" role="dialog" aria-labelledby="video_linkLabel2" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-body">
        <div class="clearfix"></div>
        <div class="clearfix"></div>
        <iframe width="640" height="360" src="https://www.youtube.com/embed/I8ik8pDTgJE?feature=player_detailpage" frameborder="0" allowfullscreen></iframe>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
  </div>
</div>

<div class="modal fade" id="video_link3" role="dialog" aria-labelledby="video_linkLabel3" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-body">
        <div class="clearfix"></div>
        <div class="clearfix"></div>
        <iframe width="640" height="360" src="https://www.youtube.com/embed/_gCwCOhMcog?feature=player_detailpage" frameborder="0" allowfullscreen></iframe>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
  </div>
</div>

<div id="text_buddy" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Type Message that you need to send to your buddy</h4>
      </div>
      <div class="modal-body">
        <p>
          <%= text_field :text, class: 'form-control' %>
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Send</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

