
<%= form_for @user_pre_challenge, class:"user_pre_challenge_form" do |f| %>
<% if @user_challenges.present? %>
<div class="dashboard_background" >
  <div class="part1">
    <div class="buddy-0" ></div>
    <div class="buddy"></div>
    <div class="buddy"></div>
    <div class="buddy"></div>
    <div class="buddy-2" >
      <a href="#" data-toggle="modal" data-target="#text_buddy">

        <%= image_tag ("buddy2.png") %><br><br>
      </a>
    </div>
    <div class="buddy-3">
      <a href="#" data-toggle="modal" data-target="#video_link" >
        <%= image_tag "play.png", style: "padding-left:15px;padding-top:4px" %><br><br>
      </a>
    </div>
    <div class="buddy-4">
      <a href="javascript:pixlr.overlay.show();" >
        <%= image_tag ("tool.png"), alt: "Pixlr" %><br><br>
      </a>
    </div>
  </div>

  <div class = "part2">
<%= f.text_field :score ,:readonly => true, :first_day => @pre_challenge.first_date , style: "height:35px;font-size:20px;font-weight:bold;",:value => "1100" , class: "score" %>
   </div>
   <div class="part3">

    <div class="move-arrow prev" >
      <i class="fa fa-chevron-left"></i>
    </div>

    <% @user_challenges.each_with_index do |user_challenge,i| %>

        <% if i==0 %>

            <div class="challenges_div first current active_slide" style="float: left;">
              <%= render partial: 'user_challenge', locals: {user_challenge: user_challenge} %>
            </div>
        <%else%>
            <div class="challenges_div" style="float: left;display: none;">
              <%= render partial: 'user_challenge', locals: {user_challenge: user_challenge} %>
            </div>
        <% end %>
    <% end %>
    <div class="move-arrow next">
      <i class="fa  fa-chevron-right"></i>
    </div>
     <%= f.file_field :upload, :class => "file" %><br>
     <div align="center"><%= f.submit "SUBMIT", class: "btn btn-primary"%></div>
  </div>

  <div class = "part4">
    <div class="date" align="center">
      <br>
      <% (1..30).each do |date| %>
          <div class="<%= date %>_date">
            <%= date %><br>
          </div>
      <% end %>
    </div>
  </div>

</div>


</div>

<%end%>

<%end%>














