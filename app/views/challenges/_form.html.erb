<%= form_for(@challenge) do |f| %>
  <% if @challenge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>

      <ul>
      <% @challenge.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3">
      <div class="multi-col-form">
        <div class="form-group col-md-12">
          <%= f.label :question %>
          <%= f.text_area :question , class: 'form-control ' %>
        </div>
        <div class="form-group col-md-12">
          <%= f.label :answer %><br>
          <%= f.text_area :answer, class: 'form-control ' %>
        </div>
        <div class="form-group col-md-12">
          <%= f.label :industry %><br>
          <%= f.select :industry_id, Industry.get_all_industry_names_to_select,{} %>
        </div>
      <div class="actions">
        <%= f.submit :class=>"btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
